<!DOCTYPE html>
<html>
<head>
  <title>Bizlocator</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="/stylesheet/style.css" type="text/css" media="screen" />
  <!--[if IE 6]><link rel="stylesheet" href="/stylesheet/style.ie6.css" type="text/css" media="screen" /><![endif]-->
  <!--[if IE 7]><link rel="stylesheet" href="/stylesheet/style.ie7.css" type="text/css" media="screen" /><![endif]-->
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
  <script type="text/javascript" src="jquery.js"></script>
  <script type="text/javascript" src="script.js"></script>

</head>
<body>

<div id="art-main">

  <!-- Start: header -->
  <%= render "/common/header" %>
  <!-- End: header -->

  <div class="art-sheet">
    <div class="art-sheet-cc"></div>
    <div class="art-sheet-body">
      <div class="art-content-layout">
        <div class="art-content-layout-row">
          <div class="art-layout-cell art-content">
            <div class="art-post">
              <div class="art-post-body">
                <div class="art-post-inner art-article">
                  <div class="art-postcontent">

                    <div id="user_nav">
                      <% if user_signed_in? %>
                          Signed in as <%= current_user.email %>. Not you?
                          <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
                      <% else %>
                          <%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %>
                      <% end %>
                    </div>
                    <p class="notice"><%= notice %></p>
                    <p class="alert"><%= alert %></p>

                    <%= yield %>



                  </div>
                  <div class="cleared"></div>
                </div>

                <div class="cleared"></div>
              </div>
            </div>

            <div class="cleared"></div>
          </div>
        </div>
      </div>
      <div class="cleared"></div>

      <div class="cleared"></div>
    </div>
  </div>
  <!-- Start: footer -->
  <%= render "/common/footer" %>
  <!-- End: footer -->
</div>



</body>
</html>
