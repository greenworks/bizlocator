<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
  <head>
  	<meta charset="utf-8" />

  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  	<title><%= content_for?(:title) ? yield(:title) : "BizLocator" %></title>

  	<%= stylesheet_link_tag    "application" %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body>

  <div class="row"></div>

  <div class="row">
    <%= render :partial => "common/header" %>
  </div>

  <div class="row">
    <div class="small-10 columns">
      <div class="row">
        <div class="small-3 columns">
          <img src="/images/bizlocator-logo.png" height="90px">
        </div>
        <div class="small-7 columns">
          <%= render :partial => "ads/ad_search" %>
        </div>
      </div>
      <div class="row">
        <div class="large-12 columns">
          <ul class="button-group even-6" style="font-size:12px">
            <li style="height:22px"><a href="/info/home" class="small button active" style="background-color:#0000ee" >Home</a></li>
            <li style="height:22px"><a href="#" class="small button radius" style="background-color:#0000ee">City</a></li>
            <li style="height:22px"><%= link_to "Jobs", jobs_path, :class=>"small button" ,:style => "background-color:#0000ee"  %></li>
            <li style="height:22px"><%= link_to "Businesses Around", business_items_path , :class => "small button"  ,:style => "background-color:#0000ee"   %></li>
            <li style="height:22px"><%= link_to "Entertainment", shopping_malls_path ,:class => "small button"  ,:style => "background-color:#0000ee"  %></li>
            <li style="height:22px"><%= link_to "Rewards", shopping_malls_path, :class => "small button"   ,:style => "background-color:#0000ee"  %></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="small-2 columns">
      <img src="/images/dummy-ad.png" style="height:100px">
    </div>
  </div>

  <div class="row">
    <div class="button-bar">
      <ul class="button-group" style="width:100%">
        <li style="width:40%"><%= link_to "Sales-Deals-Flyers-Coupons-Group Buys-All Business", jobs_path, :class=>"small button" ,:style => "font-size:10px;width:100%;color:#000000;background-color:#E9F4FF"  %></li>
        <li style="width:20%"><%= link_to "View The Malls", business_items_path , :class => "small button"  ,:style => "font-size:10px;color:#000000;background-color:#E9F4FF;width:100%"   %></li>
        <li style="width:20%"><%= link_to "Save List 10", shopping_malls_path ,:class => "small button"  ,:style => "font-size:10px;color:#000000;background-color:#E9F4FF;width:100%"  %></li>
        <li style="width:20%"><%= link_to "Todays Points", shopping_malls_path, :class => "small button"   ,:style => "font-size:10px;color:#000000;background-color:#E9F4FF;width:100%"  %></li>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <%= yield %>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <%= render :partial => "common/footer" %>
    </div>
  </div>

    
    <%= javascript_include_tag "application" %>
  </body>
</html>
