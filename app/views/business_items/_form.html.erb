<%= form_for(@business_item) do |f| %>
    <% if @business_item.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@business_item.errors.count, "error") %> prohibited this business_item from being
            saved:</h2>

          <ul>
            <% @business_item.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :title %>
      <br/>
      <%= f.text_area :title %>
    </div>
    <div class="field">
      <%= f.label :business_item_category_id %>
      <br/>
      <%= f.number_field :business_item_category_id %>
    </div>
    <div class="field">
      <%= f.label :company_id %>
      <br/>
      <%=collection_select(:business_item, :company_id, Company.user_related(current_user.id), :id, :name   ) %>
    </div>
    <div class="field">
      <%= f.label :shopping_mall_id %>
      <br/>
      <%= f.number_field :shopping_mall_id %>
    </div>
    <div class="field">
      <%= f.label :address_id %>
      <br/>
      <%=collection_select(:business_item, :address_id, Address.user_related(current_user.id), :id, :name  ) %>
    </div>
    <div class="field">
      <%= f.label :expiry_date %>
      <br/>
      <%= f.date_select :expiry_date %>
    </div>
    <div class="field">
      <%= f.label :image %>
      <br/>
      <%= f.file_field :image %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
