<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @business_item.title %>
</p>

<p>
  <% if @business_item.image.to_s != ''  %>
      <%=image_tag(@business_item.image.to_s, :height => '157', :width => '217') %>
  <% else %>
      <%=image_tag("/images/dummy.jpeg", :height => '157', :width => '217') %>
  <% end %>
</p>

<p>
  <b>Business item category:</b>
  <%= @business_item.business_item_category_id %>
</p>

<p>
  <b>Company:</b>
  <%= @business_item.company_id %>
</p>

<p>
  <b>Shopping mall:</b>
  <%= @business_item.shopping_mall_id %>
</p>

<p>
  <b>Address:</b>
  <%= @business_item.address_id %>
</p>

<p>
  <b>Ispublished:</b>
  <%= @business_item.ispublished %>
</p>

<p>
  <b>Isapproved:</b>
  <%= @business_item.isapproved %>
</p>

<p>
  <b>Expiry date:</b>
  <%= @business_item.expiry_date %>
</p>

<% if user_signed_in? && @business_item.user_id == current_user.id %>
    <%= link_to 'Edit', edit_business_item_path(@business_item) %>  |
<% end %>
<%= link_to 'Back', business_items_path %>
