<table style="width: 100%; background-color: #A3D1FF">
  <tr>
    <td style="width: 20%">
      <div class="business_item_image" style="width: 100%">
        <% if business_item.image.to_s != ''  %>
            <%=image_tag(business_item.image.to_s,:height => '80px', :width => '100px') %>
        <% else %>
            <%=image_tag("/images/dummy.jpeg", :height => '80px', :width => '100px' ) %>
        <% end %>
      </div>
    </td>
    <td style="width: 20%">
      <span style="font-size: 204x">
        <%= link_to business_item.title, business_item %>
      </span>
    </td>
    <td>
      <span style="font-size: 204x">
        <%= business_item.address && business_item.address.address_brief%>
      </span>
    </td>
    <td style="width: 10%">
      <div><a href="#" class="btn btn-info btn-mini">VIEW <i class="icon-white icon-share"></i></a></div>
      <div><a href="#" class="btn btn-info btn-mini">MAP <i class="icon-white icon-map-marker"></i></a></div>
      <div><a href="#" class="btn btn-info btn-mini">SAVE <i class="icon-white icon-download-alt"></i></a></div>
      <div><a href="#" class="btn btn-info btn-mini">CALL<i class="icon-white icon-comment"></i></a></div>
    </td>
  </tr>
</table>



</div>
