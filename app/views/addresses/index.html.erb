<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Address line one</th>
    <th>Address line two</th>
    <th>Street</th>
    <th>City</th>
    <th>Postal code</th>
    <th>Country</th>
    <th>Website</th>
    <th>Google map code</th>
    <th>Contact: </th>
    <th colspan="3">Actions</th>
  </tr>

  <% @addresses.each do |address| %>
      <tr>
        <td><%= address.address_line_one %></td>
        <td><%= address.address_line_two %></td>
        <td><%= address.street %></td>
        <td><%= address.city %></td>
        <td><%= address.postal_code %></td>
        <td><%= address.country %></td>
        <td><%= address.website %></td>
        <td><%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{address.latitude}%2C#{address.longitude}" , :height=>'100%' %></td>
        <td><%= address.contact_name %>
          <div>Email <%= address.email %></div>
          <div>Phone <%= address.phone %></div>
          <div>Fax <%= address.fax %></div>
          <div>Chat code <%= address.chat_code %></div>
          <div>Ispublished</div>
        </td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>

<br/>

