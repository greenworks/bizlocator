
<%= will_paginate @ads %>

<div class="row-fluid">

  <%  @xloopvar = 0
      @items_per_list = 2
      @ads.each do |ad|
        @xloopvar +=1
  %>
       <% if ((@xloopvar -1)%@items_per_list )==0 %>
          <div class="row-fluid">
      <%end %>

            <%= render :partial => "ads/ad_detailed_thumbnail", :locals => {:ad => ad} %>

            <% if (@xloopvar%@items_per_list !=0)
                 next
               else %>
                </div><!--/row-fluid-->
            <%end
              end %>

            <% if ((@xloopvar)%@items_per_list )!=0 %>
                </div><!--/row-fluid-->
            <% end %>

</div>

<div class="cleared"></div>
<%= will_paginate @ads %>

