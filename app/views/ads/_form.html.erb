<%= form_for @ad, :html => {:multipart => true} do |f| %>
    <% if @ad.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@ad.errors.count, "error") %> prohibited this ad from being saved:</h2>

          <ul>
            <% @ad.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :title %>
      <br/>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :image %>
      <br/>
      <%= f.file_field :image %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <br/>
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.label :ad_category_id %>
      <br/>
      <%=collection_select(:ad, :ad_category_id, AdCategory.all, :id, :name , options ={:prompt => ""} ) %>
    </div>
    <div class="field">
      <%= f.label :price %>
      <br/>
      <%= f.text_field :price %>
    </div>
    <div class="field">
      <%= f.label :address_id %>
      <br/>
      <%=collection_select(:ad, :address_id, Address.user_related(current_user.id), :id, :name  ) %>
    </div>
    <div class="field">
      <%= f.label :company_id %>
      <br/>
      <%=collection_select(:ad, :company_id, Company.user_related(current_user.id), :id, :name   ) %>
    </div>
    <div class="field">
      <%= f.label :shopping_mall_id %>
      <br/>
      <%=collection_select(:ad, :shopping_mall_id, ShoppingMall.all, :id, :name , :include_blank => true  ) %>
    </div>
    <div class="field">
      <%= f.label :ad_position_id %>
      <br/>
      <%=collection_select(:ad, :ad_position_id, AdPosition.all, :id, :name ,  :include_blank => true  ) %>
    </div>
    <div class="field">
      <%= f.label :ispublished %>
      <br/>
      <%= f.check_box :ispublished %>
    </div>
    <div class="field">
      <%= f.label :expiry_date %>
      <br/>
      <%= f.date_select :expiry_date %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
<%= link_to 'Back', ads_path %>
