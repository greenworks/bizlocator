<div class="container">
  <div class="row-fluid">
    <div class="span9">
      <div id="myCarousel" class="carousel slide">
        <ol class="carousel-indicators">
          <% @ad_categories = AdCategory.all(:select => :id).collect(&:id)
             @loopvar = 0
             #puts "loopvar ==> #{@loopvar}"
             @ad_categories.each do |x|
               #puts "ad_category ==> #{x}"
               @ad = Ad.find_all_by_ad_category_id(x).first
               unless @ad.nil?
                 #puts "ad ==> #{@ad.id}"
          %>
                  <li data-target="#myCarousel" data-slide-to="<%=@loopvar%>" <% if @loopvar==1 %> class="active" <% end %>></li>
              <% end
                 @loopvar+=1
                 end %>
        </ol>
        <div class="carousel-inner">
          <% @ad_categories = AdCategory.all(:select => :id).collect(&:id)
             #puts "loopvar ==> #{@loopvar}"
             @ad_categories.each do |x|
               @loopvar+=1
               #puts "ad_category ==> #{x}"
               @ad = Ad.find_all_by_ad_category_id(x).first
               unless @ad.nil?
                 #puts "ad ==> #{@ad.id}"
          %>
                  <div class="item <% if @loopvar==1 %> active <% end %>">
                      <div class="row-fluid" style="">
                        <div class="span6" style="border-style:solid; border-width: 1px; height:30px">
                          <%=@ad.title%>
                        </div>
                        <div class="span6" style="border-style:solid; border-width: 1px; height:30px">
                          <%=@ad.address.address_brief%>
                        </div>
                      </div>
                      <div class="row-fluid" style="">
                        <div class="span6" style="border-style:solid; border-width: 1px; height:30px">
                          <%=link_to "In The Mall", @ad.shopping_mall %> -
                          <%=link_to "Order Online", @ad %> -
                          <%=link_to "We Deliver", @ad %> -
                        </div>
                        <div class="span6" style="border-style:solid; border-width: 1px; height:30px">
                          <img src="/images/ethnic_logo.bmp" alt="Ethnic Match" style="height:20px; position: relative; top: 0px; left: 0px"/>
                          <%=@ad.address.contact_info%>
                        </div>
                      </div>
                      <div class="row-fluid" style="height: 70%">
                        <% if @ad.image.to_s != ''  %>
                            <%=image_tag(@ad.image.to_s, :height => '100%', :width => '100%')%>
                        <% else %>
                            <%=image_tag("/images/dummy.jpeg", :height => '257') %>
                        <% end %>
                      </div>
                      <div class="row-fluid" style="">
                        <div class="span12" style="border-style:solid; border-width: 1px; height:30px">
                          <%= link_to @ad.description, @ad %>
                        </div>
                      </div>
                      <div class="row-fluid" style="">
                        <div class="span10" style="border-style:solid; border-width: 1px; height:60px">
                          <ul class="button-group even-4" style="font-size:12px">
                            <li style="height:22px"><%= link_to "MORE", ads_path(:ad => @ad), :class=>"small button secondary", :style => "background_color;#000000;color:#fffff" %></li>
                            <li style="height:22px"><%= link_to "PRINT", ads_path(:ad => @ad), :class=>"small button secondary", :style => "background_color;#000000;color:#fffff" %></li>
                            <li style="height:22px"><%= link_to "MAP", ads_path(:ad => @ad), :class=>"small button secondary", :style => "background_color;#000000;color:#fffff" %></li>
                            <li style="height:22px"><%= link_to "SHARE", ads_path(:ad => @ad), :class=>"small button secondary", :style => "background_color;#000000;color:#fffff" %></li>
                            &nbsp;<li style="height:22px"><%= link_to "SAVE", ads_path(:ad => @ad), :class=>"small button secondary", :style => "background_color;#000000;color:#fffff" %></li>
                            <li style="height:22px"><%= link_to "NOTE", ads_path(:ad => @ad), :class=>"small button secondary", :style => "background_color;#000000;color:#fffff" %></li>
                            <li style="height:22px"><%= link_to "NOTIFY", ads_path(:ad => @ad), :class=>"small button secondary", :style => "background_color;#000000;color:#fffff" %></li>
                            <li style="height:22px"><%= link_to "HEAR ADS", ads_path(:ad => @ad), :class=>"small button secondary", :style => "background_color;#000000;color:#fffff" %></li>
                          </ul>
                        </div>
                        <div class="span2" style="border-style:solid; border-width: 1px; height:60px">
                          <%= link_to "CALL", ads_path(:ad => @ad), :class=>"small button secondary", :style => "background_color;#000000;color:#fffff" %>
                        </div>
                      </div>

                  </div>
              <% end
                 @loopvar = 0
                 end %>
        </div>
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">‹</a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">›</a>
      </div>
    </div>
    <div class="span3">
      <div class="panel" style="background: none; border: none">
        <%= render "/common/quicklink" %>
      </div>
    </div>
  </div>
</div>
