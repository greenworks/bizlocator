<div id="carousel-example-generic" class="carousel slide">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <% @ad_categories = AdCategory.all(:select => :id).collect(&:id)
       @loopvar = 0
       #puts "loopvar ==> #{@loopvar}"
       @ad_categories.each do |x|
         @loopvar+=1
         #puts "ad_category ==> #{x}"
         @ad = Ad.find_all_by_ad_category_id(x).first
         unless @ad.nil?
           #puts "ad ==> #{@ad.id}"
    %>
            <li data-target="#carousel-example-generic" data-slide-to="<%=@loopvar%>" <%if @loopvar==1%> class="active" <% end %> >            <%=@loopvar%>

            </li>
      <% end %>
  <% end %>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <img src="..." alt="...">
      <div class="carousel-caption">
        ...
      </div>
    </div>
    ...
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="icon-prev"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="icon-next"></span>
  </a>
</div>
