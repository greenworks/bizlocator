<%= form_tag ads_path, :method => 'get', :id => "ads_search" , :class =>"none" do %>

   <div style="border:1px solid #DFDFDF;padding:5px;width:960px;margin-top:10px;margin-bottom:10px;">
   <table>
     <tr>
       <td width=50%>Search text</td>
       <td width=15%>Min price</td>
       <td width=15%>Max price</td>
       <td width=10%></td>
       <td width=10%></td>
     </tr>
     <tr>
       <td><%= text_field_tag :search, params[:search], :class => "search_text_field", :style=>"width:100%" %></td>
       <td><%= text_field_tag :price_from, params[:price_from], :class => "search_text_field" ,:style=>"width:100%" %></td></td>
       <td><%= text_field_tag :price_to, params[:price_to], :class => "search_text_field",:style=>"width:100%" %></td>
       <td style=""><%= submit_tag "Search" , :class=>"art-button" %></td>
       <td style="vertical-align:bottom;"><%= link_to "View All Ads", ads_path  %></td>
     </tr>
   </table>
   </div>

<% end %>