<div class="row">
  <div class="span4 offset4" style="width:100%;margin-top:10px;margin-bottom:10px;">
    <%= form_tag ads_path, :method => 'get', :id => "ads_search" , :class =>"none" do %>
    <table style="border:0px">
      <tr>
        <td style="padding-top: 6px"><%= text_field_tag :search, params[:search], :class => "search_text_field" , :style=>"height:100%;font-size:16px" %></td>
        <td style="padding-bottom: 6px"><button type="submit" class="btn btn-default" >Find</button></td>
      </tr>
    </table>
    <% end %>
  </div>
</div>

