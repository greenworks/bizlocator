<div class="span6 columns ">
  <div class="row-fluid" style="height: 10px">
  <div class="span10" style="\ font-size: 16px; font-weight: bold; color:#00000; background-color: #ffffff; text-decoration: underline">
    <%=@ad.title%>
  </div>
</div>
<div class="row-fluid" style="height: 10px">
  <div class="span10 columns" style="\ font-size: 12px; font-weight: normal; color:#00000; background-color: #ffffff;  ">
    <%=link_to "In The Mall", @ad.shopping_mall, :style=>"color:#00000; background-color: #ffffff" %> -
    <%=link_to "Order Online", @ad , :style=>"color:#00000; background-color: #ffffff" %> -
    <%=link_to "We Deliver", @ad , :style=>"color:#00000; background-color: #ffffff" %> -
  </div>
</div>
<div class="row-fluid" style="height: 10px">
  <div class="span10" style="\ font-size: 12px; font-weight: normal; color:#00000; background-color: #ffffff;  ">
    <%=@ad.address.address_brief%>
  </div>
</div>
<div class="row-fluid" style="height: 10px">
  <div class="span10 columns" style="font-size: 12px; font-weight: normal; color:#00000; background-color: #ffffff; ">
    <%=@ad.address.contact_info%>
  </div>
</div>
</div>

