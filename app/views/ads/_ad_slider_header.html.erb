<div class="span5">
    <div class="row-fluid">
        <div style="font-size: 16px; font-weight: bold; color:#2F96B4;position:relative; top:-10px ;text-decoration: underline">
            <%=@ad.title%>
        </div>
    </div>
  <div class="row-fluid">
    <span>&nbsp;</span>
  </div>

  <div class="row-fluid">
      <span style="color : #ffffff">
        <%= truncate(@ad.description, :length => 200) %>
      </span>
      <span>
        <%= link_to '... (more)', @ad , :style => "color: #51A351; font-weight: bold"%>
      </span>
    </div>
</div>

<div class="span1">
  <span>&nbsp;</span>
</div>

<div class="span5" style="font-size: 12px; font-weight: normal; color:#ffffff; line-height: 2">
  <div class="row-fluid">
    <div style="font-size: 16px; font-weight: bold; color:#2F96B4;position:relative; top:-15px; text-decoration: underline ">
      <%=@ad.company && @ad.company.name  %>
    </div>
  </div>
  <div class="row-fluid" style="height: 10px">
    <div class="span10" style="font-size: 12px; font-weight: normal; color:#ffffff;   ">
      <%=link_to "In The Mall", @ad.shopping_mall, :style=>"color:#ffffff; " %> -
      <%=link_to "Order Online", @ad , :style=>"color:#ffffff; " %> -
      <%=link_to "We Deliver", @ad , :style=>"color:#ffffff;" %> -
    </div>
  </div>
  <div class="row-fluid" style="height: 10px">
    <div class="span10" style=" font-size: 12px; font-weight: normal; color:#ffffff; ">
      <%=@ad.address.address_brief%>
    </div>
  </div>
  <div class="row-fluid" style="height: 10px">
    <div class="span10" style="font-size: 12px; font-weight: normal; color:#ffffff; ">
      <%=@ad.address.contact_info%>
    </div>
  </div>
</div>

<div class="span1">
  <%= render :partial => "ads/ad_ethnicity_checker", :locals => {:user_ethicity => "user_ethnicity", :ad => "ad_enthicity"} %>
</div>
