  <%= render :partial => "ads/ad_ethnicity_checker", :locals => {:user_ethicity => "user_ethnicity", :ad => "ad_enthicity"} %>
</div>

<div class="span5" style="font-size: 12px; font-weight: normal; color:#00000; background-color: #ffffff; line-height: 2">
  <%= truncate(@ad.description, :length => 200) %><br/><%= link_to '... (more)', @ad %>
</div>