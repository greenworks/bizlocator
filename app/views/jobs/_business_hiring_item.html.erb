<div class="row-fluid text-center" style="padding-top: 10px">
  <div class="span10">
      <span style="font-size: 20px">
        <%= job.title  %>
      </span>
  </div>
  <div class="span2">
    <span>
      <a href="#" class="btn btn-info btn-mini">NOTIFY ME<i class="icon-white icon-inbox"></i></a>
    </span>
  </div>
</div>
<div class="row-fluid" style="margin: 1px; border-style: solid; border-width: 1px; height: 100%">
  <div class="span3"  style="margin: 0px; border-style: solid; border-width: 1px; height: 100%">
    <div class="row-fluid">
      <span style="font-size: 16px; font-weight: bold">
        <%= pluralize job.vacancy_count, job.title %>
      </span>
    </div>
    <div class="row-fluid">
      <span style="font-size: 10px">
        <%= job.meeting_address %>
      </span>
    </div>
  </div>
  <div class="span6">
    <%= job.description %>
    <div class="row-fluid">
      <span style="font-size: 10px">
        <b>Qualification :</b><%= job.qualification %>
      </span>
    </div>
    <div class="row-fluid">
      <span style="font-size: 10px">
        <b>Listing Expiry Date :</b><%= job.expiry_date %>
      </span>
    </div>
  </div>
</div>
<div class="row-fluid" style="margin: 1px; border-style: solid; border-width: 1px">
  <a href="#" class="btn btn-success small">MORE <i class="icon-white icon-plus-sign"></i></a>
  <a href="#" class="btn btn-info btn-mini">SAVE <i class="icon-white icon-download-alt"></i></a>
  <a href="#" class="btn btn-info btn-mini">NOTE <i class="icon-white icon-flag"></i></a>
  <a href="#" class="btn btn-info btn-mini">NOTIFY <i class="icon-white icon-inbox"></i></a>
  <a href="#" class="btn btn-info btn-mini">PRINT <i class="icon-white icon-print"></i></a>
  <a href="#" class="btn btn-info btn-mini">SHARE <i class="icon-white icon-share"></i></a>
  <a href="#" class="btn btn-info btn-mini">CALL<i class="icon-white icon-comment"></i></a>
</div>

