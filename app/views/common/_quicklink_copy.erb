<div class="quick_link_bar">
  <div class="span3 text-centered">
    <span class="secondary label" style="position: center;background-color:#ffffff; color:#003871; font-family: Copperplate Gothic; font-size:large">Quick Links</span>
  </div>
  <br/>

  <style>
      .quick_link_bar{
          width:100%;
          float: none;
          list-style:none;
          color:#000000;
      }

      .quick_link_bar ul{
          width:100%;
          margin:0 auto 0 auto;
      }

      .quick_link_bar ul li {
          background-color:#E9F4FF;
          float:none;
          color:#000000;
          padding:0 20px 0 20px;
          border-right:1px solid #000000;
          border-left:1px solid #000000;
          border-top:1px solid #000000;
          border-bottom:1px solid #000000;
          height:20px;
          list-style:none;
          display:block;
          line-height:20px;
          text-align:center;
          cursor:pointer;
          font-size: 12px;
      }

      .quick_link_bar ul li:hover {
          background-color:#CCC;
      }

      .quick_link_bar ul li a:visited{
          color:#000000;
      }
  </style>

  <ul>
    <% @ad_categories = AdCategory.get_all_main_categories
       @ad_categories.each do |ad_category| %>
        <li>
          <%= link_to ad_category.name , ads_path(:ad_category_id => ad_category.id), :class=>"tiny-12 columns tiny button secondary", :style => {:width=>"100%", :background_color=>"#74ad5a"} %>
        </li>
    <% end %>
  </ul>
</div>




<!--/Slider-->
<% @items_per_list = 7 %>
<div class="container">
  <div class="span8">
    <div class="well">
      <div id="quickLinkCarousel" class="carousel slide">
        <!-- Carousel items -->
        <div class="carousel-inner">
          <%
             @xloopvar = 0
             @ad_categories = AdCategory.get_all_main_categories
             @ad_categories.each do |ad_category|
                 @xloopvar +=1
          %>
                  <% if ((@xloopvar -1) %@items_per_list )==0 %>
                      <div class="item <% if (@xloopvar == 1)  %>
                            active
                            <% end %>">
                        <div class="row-fluid offset1">
                  <% end %>
                  <%= link_to ad_category.name , ads_path(:ad_category_id => ad_category.id), :class=>"tiny-12 columns tiny button secondary", :style => {:width=>"100%", :background_color=>"#74ad5a"} %>
                  <% if (@xloopvar%@items_per_list !=0)
                       next
                     else %>
                      </div><!--/row-fluid-->
                      </div><!--/item-->
                  <%end
                    end%>
          <% if ((@xloopvar)%@items_per_list )!=0 %>
              </div><!--/row-fluid-->
              </div><!--/item-->
          <% end %>
          </div><!--/carousel-inner-->
    <a class="left carousel-control" href="#quickLinkCarousel" data-slide="prev">‹</a>
    <a class="right carousel-control" href="#quickLinkCarousel" data-slide="next">›</a>
  </div><!--/myCarousel-->

</div><!--/well-->
</div>
</div>
