<h1>Listing ad_categories</h1>

<% ('A'..'Z').each do |char| %>

    <% if char==params[:char] %>
        <%= link_to char, ad_categories_path(:char => char), :class => 'selected_char' %>
    <% else %>
        <%= link_to char, ad_categories_path(:char => char) %>
    <% end %>
<% end %>
<%= link_to "ALL", ad_categories_path %>

<table>
  <tr>
    <th>Name</th>
    <th>SubCategories Ids</th>
    <th>Parent Category</th>
    <th>Introtext</th>
    <th>Description</th>
    <th>Ispublished</th>
    <th>Image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @ad_categories.each do |ad_category| %>
      <tr>
        <td><%= ad_category.name %></td>
        <td>
          <% ad_category.get_child_categories.each do |subcategory| %>
            <b><%= subcategory.id %>, </b>
          <% end%>
        </td>
        <td><%= business_item_category.parent_category_id %></td>
        <td><%= ad_category.introtext %></td>
        <td><%= ad_category.description %></td>
        <td><%= ad_category.ispublished %></td>
        <td>
          <% if ad_category.image.to_s != ''  %>
              <%=image_tag(ad_category.image.to_s, :height => '60', :width => '120') %>
          <% else %>
              <%=image_tag("/images/dummy.jpeg", :height => '60 ', :width => '120') %>
          <% end %>
        </td>
        <td><%= link_to 'Show', ad_category %></td>
        <td><%= link_to 'Edit', edit_ad_category_path(ad_category) %></td>
        <td><%= link_to 'Destroy', ad_category, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>

