<% width=450
height = (width*0.66).round(0) %>
<table style="border-width: 2; border-color: #ff4301; border: 2" class="<%=shopping_mall.mall_type_id %>">
  <tr>
    <td>
      <%= link_to (shopping_mall.name).upcase , shopping_mall ,  :style => 'text-decoration: underline, text-weight: bold' %>
    </td>
    <td>
      MALL INFO<%= shopping_mall.address && shopping_mall.address.id %>
    </td>
    <td style="text-decoration: underline, bold">
      APPROX DISTANCE
    </td>
  </tr>
  <tr>
    <td colspan="2" style="word-wrap: true" width='20%' >
      <%= shopping_mall.address && shopping_mall.address.address_brief %>
    </td>
    <td>
      <%= pluralize( rand(10) , 'Minute' ) %>
    </td>
  </tr>
  <tr height="80%">
    <td colspan="2">
      <% if shopping_mall.image.to_s != ''  %>
          <%=image_tag(shopping_mall.image.to_s, :height=>height, :width => width) %>
      <% else %>
          <%=image_tag("/images/dummy.jpeg", :height=>height, :width => width) %>
      <% end %>
    </td>
    <td width="40%">
      <a href="#" id="blob" class="btn large primary" rel="popover" style="margin-top: 300px">MAP</a>
      <%  if !(shopping_mall.address.nil?) %>
          <script>
              var img = '<%= image_tag "http://maps.google.com/maps/api/staticmap?size=#{width}x#{height}&scale=1&sensor=false&zoom=12&feature=all&markers=#{shopping_mall.address.latitude}%2C#{shopping_mall.address.longitude}" %>';
              $("#blob").popover({ title: 'This is location of mall!', content: img });
          </script>
      <% end %>
    </td>
  </tr>
</table>
