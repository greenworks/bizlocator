<div class="shopping_mall-header">
  <div class="shopping_mall-header-small" style="width: 50%; padding-left: 6px">
    <%= link_to (shopping_mall.name).upcase, shopping_mall, :style => "text-weight: bold; font-size:16px" %>
  </div>
  <div id="mall_info<%= shopping_mall.id %>"
       class="shopping_mall-header-small" style="width: 20%; background-color: #C8696F; text-align: center">
    <span class="mall_links">
    <a data-toggle="modal"
       data-target="#popMapData<%= shopping_mall.id %>">Mall Links</a></span>

  </div>
  <div class="shopping_mall-header-small" style="width: 26.8%; text-align: center; color:#D4E7F9">
    Approx <%= pluralize(rand(10), 'Minute') %>
  </div>
</div>


<div class="shopping_mall-info">
  <div class="shopping_mall-info-small" style="width: 72.5%; ">
    <div class="row-fluid" style="padding-left: 6px">
      <%= shopping_mall.address && truncate(shopping_mall.address.address_brief, :length => 48) %>
    </div>
    <div class="row-fluid">
      <div style="position:relative; z-index:0;">
        <% if shopping_mall.image.to_s != '' %>
            <%= image_tag(shopping_mall.image.to_s, :class => "img_preview") %>
        <% else %>
            <%= image_tag("/images/dummy.jpeg", :class => "img_preview") %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="shopping_mall-info-small centered-group" style="width: 26%; ">
    <span id="mall-view-bar mall_view<%= shopping_mall.id %>">
        <a href="<%= "/shopping_malls/#{shopping_mall.id}/view" %>"
           style="text-decoration: underline; font-weight:bold; width: 35%; margin: 0px auto; color:#D4E7F9; line-height: 40px">VIEW
          ALL</a>
      <ul class="mall-view-bar">
        <li><a href="#">ADS</a></li>
        <li><a href="#">BUSINESSES</a></li>
        <li><a href="#">CATEGORIES</a></li>

      </ul>

    </span>
  </div>
</div>
<div class="modal fade" id="popMapData<%= shopping_mall.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

  <%= render :partial => "shopping_malls/shopping_mall_links_modal", :locals => {:shopping_mall => shopping_mall} %>

</div><!-- /.modal -->
