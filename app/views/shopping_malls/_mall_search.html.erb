<div class="span12" style="margin-top:15px; ">
  <%= form_tag shopping_malls_path, :method => 'get', :id => "mall_search"   do %>
      <!--%= text_field_tag :search, params[:search],
                         :class => "search_text_field",
                         :style=> "background-color: #ffffff;
                                  height:24px; width:260px; top:0px; ",
                         :value=>"Enter Address Here" ,
                          :onFocus=>"this.value=''"
      %-->

      <script>
          function inputFocus(i){
              if(i.value==i.defaultValue){ i.value=""; i.style.color="#000"; }
          }
          function inputBlur(i){
              if(i.value==""){ i.value=i.defaultValue; i.style.color="#888"; }
          }
      </script>
      <span style="text-decoration: underline">DISTANCE TO MALLS</span>
      <input id="search"
                              class="search_text_field"
                              type="text"
                              name="Your Address "
                              style="background-color: rgb(255, 255, 255);
                                      height: 24px;
                                      width: 40%;
                                      top: 0px;
                                      text-align: center;
                                      font-weight: bold;
                                      color:#888;"
                              value="Enter Address Here" onfocus="inputFocus(this)" onblur="inputBlur(this)" />

      <input type="submit"
             style="background-color: #E8E7E2;
                     height:32px;
                     width: 10%;
                     top:-5px;
                     left: -3px;
                     font-weight: bolder;
                     border-radius: 8px;"
             value="GO"/>
  <% end %>
</div>
