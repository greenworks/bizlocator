<!--/Slider-->
<div class="span11 container">
  <div class="well">
    <div id="AdCategoryCarousel" class="carousel slide">
      <!-- Carousel items -->
      <div class="carousel-inner">
        <% @items_per_list = 2
           @category_count=0
           AdCategory.where( " id in (select ad_category_id from ads where shopping_mall_id = ? )", params[:id]).each do |ad_category|
             @category_count +=1
             if ((@category_count -1) %@items_per_list )==0 %>
                <div class="item <% if (@category_count == 1)  %> active <% end %>">
                  <div class="row-fluid">
            <% end %>
                <%= render :partial => "ad_categories/ad_category_thumbnail", :locals => {:ad_category => ad_category, :shopping_mall => @shopping_mall} %>
            <% if (@category_count%@items_per_list ==0) %>
                </div><!--/row-fluid-->
                </div><!--/item-->
            <% else
               %>
            <div><span>&nbsp;</span></div>
            <%
               end
               end %>

        <% if ((@category_count)%@items_per_list )!=0 %>
            </div><!--/row-fluid-->
            </div><!--/item-->
        <% end %>
        </div><!--/carousel-inner-->
  <a class="left carousel-control" href="#AdCategoryCarousel" data-slide="prev">‹</a>
  <a class="right carousel-control" href="#AdCategoryCarousel" data-slide="next">›</a>
</div><!--/myCarousel-->
</div><!--/well-->
</div>
