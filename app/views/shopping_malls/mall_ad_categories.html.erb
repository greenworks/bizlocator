<div class="row-fluid">
  <div>
    <span>
      &nbsp;
    </span>
  </div>
  <div class="span6 offset5 text-centered">
      <span style="font-size: 24px">
              <%=@shopping_mall.name.upcase %>
      </span>
  </div>
</div>

<div class="row-fluid">
   <span>
      &nbsp;
    </span>
  <div class="row-fluid">
    <div class="span6 offset5  ">
      <span style="font-size: 14px; font-weight: bold; text-align: center">ALL CATEGORIES </span>
      <span style="font-size: 14px; font-weight: normal">: By Letter</span>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span8 offset2 text-centered">
      <span style="font-size: 18px">
           <% ('A'..'Z').each do |char| %>
                <% if char==params[:char] %>
                    <%= link_to char, ad_categories_path(:char => char, :shopping_mall=>@shopping_mall), :class => 'selected_char' %>
                <% else %>
                    <%= link_to char, ad_categories_path(:char => char,  :shopping_mall=>@shopping_mall) %>
                <% end %>
            <% end %>

        <%= link_to "ALL", ad_categories_path %>
      </span>
    </div>
  </div>
</div>


<div class="row-fluid">
   <span>
      &nbsp;
    </span>
  <div class="row-fluid">
    <div class="span6 offset5  ">
      <span style="font-size: 14px; font-weight: bold; text-align: center">ALL CATEGORIES </span>
      <span style="font-size: 14px; font-weight: normal">: By Title</span>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span8 offset2 text-centered">
      <span style="font-size: 18px">
          <% @ad_categories.each do |ad_category| %>
             <div class="row-fluid">
                <%= render :partial => "ad_categories/ad_category_box", :locals => {:ad_category => ad_category, :shopping_mall => @shopping_mall} %>
             </div>
            <div><span>&nbsp;</span></div>
            <% end %>
      </span>
    </div>
  </div>
</div>
